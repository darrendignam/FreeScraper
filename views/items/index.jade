block content

	div(class='navbar navbar-default navbar-fixed-top')
		div(class='container')
			div(class='navbar-header')
				a(href='/' class='navbar-brand') FreeScraper
				ul(class='nav navbar-nav')
						li 
							a(href='/') Search
						li 
							a(href='/') About
  
	div(class='container') 
		h1= title
		table(class='table table-striped table-hover')
			each val in items
				tr
					
					//- img(src=val.picture alt='')
